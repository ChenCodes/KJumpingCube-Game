    private void internalCopy(MutableBoard board) {
        _undoCopyBoard = new Square[board.size()][board.size()];
        for (int i = 0; i < board.size(); i++) {
            for (int j = 0; j < board.size(); j++) {
                _undoCopyBoard[i][j] = board.get(i + 1, j + 1);
            }
        }
    }

