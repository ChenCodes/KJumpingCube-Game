    @Override
    Square get(int n) {
        int counter = 0;
        for (int i = 0; i < _newBoard.length; i++) {
            for (int j = 0; j < _newBoard.length; j++) {
                if (counter == n) {
                    counter = 0;
                    return _newBoard[i][j];
                } else {
                    counter += 1;
                }

            }
        }
        return null;
    }

